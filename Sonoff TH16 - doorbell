binary_sensor:
  - platform: status
    name: "API connection status"
    id: connection_status

  - platform: gpio
    pin:
      number: GPIO0
      mode: INPUT_PULLUP
    name: "Device - Button"
    on_press:
      - switch.toggle: relay
  - platform: gpio
    pin:
      number: GPIO14
      inverted: True
    name: "Device - Switch"
    on_press:
      if:
        condition:
          binary_sensor.is_off: connection_status
        then:
          - switch.turn_on: relay
          - delay: 0.5s
          - switch.turn_off: relay

switch:
  - platform: restart
    name: "Device - Restart"
  - platform: gpio
    name: "Device - Relay"
    pin: GPIO12
    id: relay
    restore_mode: ALWAYS_OFF

status_led:
  pin:
    number: GPIO13
    inverted: true
